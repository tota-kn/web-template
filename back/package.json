{
  "name": "web-tempate-back",
  "version": "1.0.0",
  "description": "webシステムテンプレート バックエンド",
  "scripts": {
    "lint": "eslint **/*.{js,ts,mjs} --fix && prettier '**/*.{js,ts,mjs}' --write",
    "test": "vitest run --coverage",
    "build": "rm -rf ./dist && node esbuild.config.mjs --build",
    "dev": "pnpm run dev:build && pnpm run dev:sam && pnpm run dev:test",
    "dev:esbuild": "rm -rf ./dist && node esbuild.config.mjs --watch",
    "dev:sam": "sam local start-api --port 3000",
    "dev:test": "vitest watch",
    "dev:tsc": "tsc --noemit --watch",
    "deploy:dev": "sam deploy --config-env dev",
    "deploy:prod": "sam deploy --config-env prod",
    "generate:openapi": "pnpx openapi-typescript ./openapi.yml -o src/types/apiClient.ts --enum-values"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/compat": "^1.2.4",
    "@eslint/js": "^9.17.0",
    "@types/aws-lambda": "^8.10.146",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "2.1.8",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.15.1"
}
