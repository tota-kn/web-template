{
    "compilerOptions": {
        "target": "ES2024",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "module": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": [
       "node_modules",
       "dist"
    ]
}