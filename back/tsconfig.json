{
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.mjs"],
  "exclude": ["node_modules", "dist"]
}
