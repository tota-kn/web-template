{
  "compilerOptions": {
    "target": "ES2023",
    "module": "node16",
    "lib": ["ES2023"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.mjs"],
  "exclude": ["node_modules", "dist"]
}
